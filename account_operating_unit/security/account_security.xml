<odoo noupdate="0">

    <record id="ir_rule_account_journal_allowed_operating_units"
            model="ir.rule">
        <field name="model_id" ref="account.model_account_journal"/>
        <field name="domain_force">['|', ('operating_unit_id','=',False), ('operating_unit_id','in',user.operating_unit_ids.ids)]
        </field>
        <field name="name">Journals from allowed operating units</field>
        <field name="global" eval="True"/>
        <field eval="0" name="perm_unlink"/>
        <field eval="0" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="0" name="perm_create"/>
    </record>

