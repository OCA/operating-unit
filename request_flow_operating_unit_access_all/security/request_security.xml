<odoo>

    <record id="group_all_ou_request" model="res.groups">
        <field name="name">Access all OUs' request_flow</field>
        <field name="category_id" ref="operating_unit.module_operating_units" />
    </record>

    <function model="ir.rule" name="write">
        <value
            eval="[ref('request_flow_operating_unit.ir_rule_request_allowed_operating_units')]"
        />
        <value
            eval="{'domain_force': &quot;['|','|',(1, '=', 1) if user.has_group('request_flow_operating_unit_access_all.group_all_ou_request') else (0, '=', 1),('operating_unit_id','=',False),('operating_unit_id','in', user.operating_unit_ids.ids)]&quot;}"
        />
    </function>

</odoo>
