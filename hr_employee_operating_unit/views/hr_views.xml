<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!-- Employee -->
        <!-- Inherited Search View-->
        <record id="hr_emp_search_view" model="ir.ui.view">
            <field name="name">hr.employee.search</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <search string="Employees">
                    <field name="default_operating_unit_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Operating Unit" domain="[]"
                                context="{'group_by':'default_operating_unit_id'}"/>
                    </group>
                </search>
             </field>
         </record>

        <!-- Inherited Form view-->
        <record id="hr_emp_view_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='company_id']" position="after">
                        <field name="default_operating_unit_id"
                               options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"
                               domain="[('company_id', '=', company_id)]"/>
                        <field name="operating_unit_ids"
                               domain="[('company_id', '=', company_id)]"
                               widget="many2many_tags"/>
                    </xpath>
                </data>
            </field>
        </record>

        <!-- Inherited Tree view-->
        <record id="hr_emp_view_tree1" model="ir.ui.view">
            <field name="name">hr.employee.view.tree</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='work_phone']" position="before">
                        <field name="default_operating_unit_id"/>
                    </xpath>
                </data>
            </field>
        </record>
        <!-- Employee -->

    </data>
</openerp>
