<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Agreement Form View -->
    <record id="partner_agreement_form_view" model="ir.ui.view">
        <field name="name">Agreement Form</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='assigned_user_id']" position="after">
                <field name="operating_unit_id" />
            </xpath>
        </field>
    </record>

    <record id="partner_agreement_search_view" model="ir.ui.view">
        <field name="name">Agreement Search</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_search_view" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_status']" position="before">
                <filter
                    name="operating_unit_groupby"
                    string="Operating Unit"
                    context="{'group_by': 'operating_unit_id'}"
                />
            </xpath>
        </field>
    </record>

</odoo>
