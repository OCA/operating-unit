<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="group_all_ou_stock_request" model="res.groups">
        <field name="name">Access all OUs' stock requests</field>
        <field name="category_id" ref="operating_unit.module_operating_units" />
    </record>

    <function model="ir.rule" name="write">
        <value
            eval="[ref('stock_request_operating_unit.ir_rule_stock_request_order_allowed_operating_units')]"
        />
        <value
            eval="{'domain_force': &quot;['|','|',(1, '=', 1) if user.has_group('stock_request_operating_unit_access_all.group_all_ou_stock_request') else (0, '=', 1),('operating_unit_id','=',False),('operating_unit_id','in', user.operating_unit_ids.ids)]&quot;}"
        />
    </function>

    <function model="ir.rule" name="write">
        <value
            eval="[ref('stock_request_operating_unit.ir_rule_stock_request_allowed_operating_units')]"
        />
        <value
            eval="{'domain_force': &quot;['|','|',(1, '=', 1) if user.has_group('stock_request_operating_unit_access_all.group_all_ou_stock_request') else (0, '=', 1), ('operating_unit_id','=',False), ('operating_unit_id','in', user.operating_unit_ids.ids)]&quot;}"
        />
    </function>

</odoo>
