<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pos_session_operating_unit_view_tree" model="ir.ui.view">
        <field name="name">pos.session.operating.unit.view.tree</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="operating_unit_id" optional="show" />
            </xpath>
        </field>
    </record>
    <record id="pos_session_operating_unit_view_search" model="ir.ui.view">
        <field name="name">pos.session.operating.unit.view.search</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_search" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="operating_unit_id" />
            </xpath>
            <xpath expr="//filter[@name='closing_date']" position="after">
                <filter
                    name="operating_unit"
                    string="Operating Unit"
                    context="{'group_by': 'operating_unit_id'}"
                />
            </xpath>
        </field>
    </record>
    <record id="pos_session_operating_unit_view_form" model="ir.ui.view">
        <field name="name">pos.session.operating.unit.view.form</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='stop_at']" position="after">
                <field name="operating_unit_id" options="{'no_create': True}" />
            </xpath>
        </field>
    </record>
</odoo>
