<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="report_pos_order_operating_unit_view_search" model="ir.ui.view">
        <field name="name">report.pos.order.operating.unit.view.search</field>
        <field name="model">report.pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_report_pos_order_search" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_categ_id']" position="after">
                <field name="operating_unit_id" />
            </xpath>
            <xpath expr="//filter[@name='product_category']" position="after">
                <filter
                    name="operating_unit"
                    string="Operating Unit"
                    context="{'group_by': 'operating_unit_id'}"
                />
            </xpath>
        </field>
    </record>
</odoo>
