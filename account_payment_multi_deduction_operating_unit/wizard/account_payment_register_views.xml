<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field
            name="inherit_id"
            ref="account_payment_multi_deduction.view_account_payment_register_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='writeoff_account_id']" position="before">
                <div
                    attrs="{'invisible': [('payment_difference_handling', '!=', 'reconcile')]}"
                >
                    <label for="writeoff_operating_unit_id" class="oe_edit_only" />
                    <field name="writeoff_operating_unit_id" />
                </div>
            </xpath>
            <xpath
                expr="//field[@name='writeoff_analytic_account_id']"
                position="attributes"
            >
                <attribute name="domain">
                    ['|', ('operating_unit_ids', '=', writeoff_operating_unit_id), ('operating_unit_ids', '=', False)]
                </attribute>
            </xpath>
            <!-- Multi Deduction -->
            <xpath expr="//field[@name='deduction_ids']" position="before">
                <field name="deduct_operating_unit_id" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='deduction_ids']/tree/field[@name='analytic_account_id']"
                position="before"
            >
                <field name="operating_unit_id" />
            </xpath>

            <xpath
                expr="//field[@name='deduction_ids']/tree/field[@name='analytic_account_id']"
                position="attributes"
            >
                <attribute name="domain">
                    ['|', ('operating_unit_ids', '=', operating_unit_id), ('operating_unit_ids', '=', False)]
                </attribute>
            </xpath>

        </field>
    </record>
</odoo>
