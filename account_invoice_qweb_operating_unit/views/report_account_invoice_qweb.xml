<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document_ou">
        <t t-call="report_qweb_operating_unit.external_layout_ou">
            <div class="page">
                <div class="row">
                    <br/>
                    <div class="col-xs-5 col-xs-offset-7">
                        <address t-field="o.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                        <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
                    </div>
                </div>

                <h2>
                    <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-if="o.type == 'out_refund'">Refund</span>
                    <span t-if="o.type == 'in_refund'">Vendor Refund</span>
                    <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                    <span t-field="o.number"/>
                </h2>

                <div t-if="o.name">
                    <strong>Subject:</strong>
                    <p t-field="o.name"/>
                </div>

                <div class="row mt32 mb32">
                    <div class="col-xs-2" t-if="o.date_invoice">
                        <strong>Invoice Date:</strong>
                        <p t-field="o.date_invoice"/>
                    </div>
                    <div class="col-xs-2" t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                        <strong>Due Date:</strong>
                        <p t-field="o.date_due"/>
                    </div>
                    <div class="col-xs-2" t-if="o.user_id.name">
                        <strong>Responsible:</strong>
                        <p t-field="o.user_id.name"/>
                    </div>
                    <div class="col-xs-3" t-if="o.payment_term_id.note">
                        <strong>Payment Term:</strong>
                        <p t-field="o.payment_term_id.note"/>
                    </div>
                    <div class="col-xs-2" t-if="o.origin">
                        <strong>Our Reference:</strong>
                        <p t-field="o.origin"/>
                    </div>
                    <div class="col-xs-2" t-if="o.partner_id.ref">
                        <strong>Customer Code:</strong>
                        <p t-field="o.partner_id.ref"/>
                    </div>
                    <div name="reference" class="col-xs-2" t-if="o.reference">
                        <strong>Your Reference:</strong>
                        <p t-field="o.reference"/>
                    </div>
                    <div name="operating_unit" class="col-xs-3" t-if="o.operating_unit_id">
                        <strong>Operating Unit:</strong>
                        <p t-field="o.operating_unit_id"/>
                    </div>
                </div>

                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Order Seq.</th>
                            <th>Your Item</th>
                            <th>Our Item</th>
                            <th>Description</th>
                            <th class="text-right">Quantity</th>
                            <th>Unit Price</th>
                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                            <th class="text-right">Taxes</th>
                            <th class="text-right">Tax Excluded Price</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <tr t-foreach="o.invoice_line_ids" t-as="l">
                            <td><span t-field="l.sequence"/></td>
                            <td><span t-field="l.name"/></td>
                            <td><span t-field="l.product_id.default_code"/></td>
                            <td><span t-field="l.name"/></td>
                            <td class="text-right">
                                <span t-field="l.quantity"/>
                                <span t-field="l.uom_id"  groups="product.group_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_unit"/>
                            </td>
                            <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                <span t-field="l.discount"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                            </td>
                            <td class="text-right">
                                <span t-field="l.price_subtotal" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Subtotal</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                            <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                <tr>
                                    <td><span t-esc="amount_by_group[0]"/></td>
                                    <td class="text-right">
                                        <span t-esc="amount_by_group[1]"/>
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                     <span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="row" t-if="o.tax_line_ids">
                    <div class="col-xs-6">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Tax</th>
                                    <th class="text-right">Base</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.tax_line_ids" t-as="t">
                                    <td><span t-field="t.name"/></td>
                                    <td class="text-right">
                                        <span t-field="t.base" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="t.amount" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <p t-if="o.comment">
                    <strong>Comment:</strong>
                    <span t-field="o.comment"/>
                </p>
                <p t-if="o.fiscal_position_id.note">
                    <strong>Fiscal Position Remark:</strong>
                    <span t-field="o.fiscal_position_id.note"/>
                </p>
            </div>
        </t>
    </template>

    <template id="report_account_invoice_qweb" inherit_id="account.report_invoice">
        <xpath expr="//t[@t-call='account.report_invoice_document']" position="attributes">
            <attribute name="t-call">account_invoice_qweb_operating_unit.report_invoice_document_ou</attribute>
        </xpath>
    </template>

</odoo>
