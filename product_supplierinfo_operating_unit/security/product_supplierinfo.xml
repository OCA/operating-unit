<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">

        <record id="ir_rule_purchase_order_allowed_operating_units" model="ir.rule">
            <field name="model_id" ref="purchase.model_purchase_order" />
            <field
                name="domain_force"
            >['|',('operating_unit_id','=',False),('operating_unit_id','in',[g.id for g in
                user.operating_unit_ids])]
            </field>
            <field name="name">PO's from allowed operating units</field>
            <field name="global" eval="True" />
            <field eval="1" name="perm_unlink" />
            <field eval="1" name="perm_write" />
            <field eval="1" name="perm_read" />
            <field eval="1" name="perm_create" />
        </record>

        <record
            id="ir_rule_purchase_order_line_allowed_operating_units"
            model="ir.rule"
        >
            <field name="model_id" ref="purchase.model_purchase_order_line" />
            <field
                name="domain_force"
            >['|',('operating_unit_id','=',False),('operating_unit_id','in',[g.id for g in
                user.operating_unit_ids])]
            </field>
            <field name="name">PO lines from allowed operating units</field>
            <field name="global" eval="True" />
            <field eval="1" name="perm_unlink" />
            <field eval="1" name="perm_write" />
            <field eval="1" name="perm_read" />
            <field eval="1" name="perm_create" />
        </record>

        <record
            id="ir_rule_product_supplierinfo_allowed_operating_units"
            model="ir.rule"
        >
            <field name="model_id" ref="product.model_product_supplierinfo" />
            <field
                name="domain_force"
            >['|',('operating_unit_id','=',False),('operating_unit_id','in',[g.id for g in
                user.operating_unit_ids])]
            </field>
            <field
                name="name"
            >Supplier Info Records from allowed operating units</field>
            <field name="global" eval="True" />
            <field eval="1" name="perm_unlink" />
            <field eval="1" name="perm_write" />
            <field eval="1" name="perm_read" />
            <field eval="1" name="perm_create" />
        </record>

        <record id="group_manage_vendor_ou_price" model="res.groups">
            <field name="name">Manage Vendor Operating Unit Price</field>
            <field name="category_id" ref="base.module_category_hidden" />
        </record>

    </data>
</odoo>
